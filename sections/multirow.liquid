        },

        { "type": "richtext", "id": "text", "default": "t:sections.multirow.blocks.row.settings.text.default", "label": "t:sections.multirow.blocks.row.settings.text.label" },
        { "type": "text", "id": "button_label", "default": "t:sections.multirow.blocks.row.settings.button_label.default", "label": "t:sections.multirow.blocks.row.settings.button_label.label" },
        { "type": "url",  "id": "button_link",  "label": "t:sections.multirow.blocks.row.settings.button_link.label" }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.multirow.presets.name",
      "blocks": [{ "type": "row" }, { "type": "row" }, { "type": "row" }]
    }
  ]
}
{% endschema %}
