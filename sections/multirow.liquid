        { "type": "text", "id": "caption", "default": "t:sections.multirow.blocks.row.settings.caption.default", "label": "t:sections.multirow.blocks.row.settings.caption.label" },
        { "type": "inline_richtext", "id": "heading", "default": "t:sections.multirow.blocks.row.settings.heading.default", "label": "t:sections.multirow.blocks.row.settings.heading.label" },

