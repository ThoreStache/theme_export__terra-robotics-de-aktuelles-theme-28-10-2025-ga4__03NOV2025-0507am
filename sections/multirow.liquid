{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

/* Multirow-Buttons: abgerundet wie im Beispiel (kein Pill) */
.multirow { 
  --buttons-radius: 10px;   /* hier die gewünschte Rundung einstellen (z.B. 12–18px) */
}

.multirow .button { 
  border-radius: var(--buttons-radius);
  overflow: hidden;         /* saubere Kanten, falls Effekte/Layer vorhanden sind */
}

/* Pseudo-Elemente (Border/Hover) müssen denselben Radius haben */
.multirow .button::before,
.multirow .button::after {
  border-radius: var(--buttons-radius) !important;
}

  /* Runde Ecken + Fülllogik für alle Medientypen */
  .multirow .image-with-text__media,
  .multirow .image-with-text__media img,
  .multirow .image-with-text__media video,
  .multirow .image-with-text__media iframe {
    border-radius: 30px;
    overflow: hidden;
  }
  .multirow .image-with-text__media video,
  .multirow .image-with-text__media iframe,
  .multirow .image-with-text__media img {
    width: 100%;
    height: 100%;
    display: block;
  }
  .multirow .image-with-text__media video,
  .multirow .image-with-text__media img {
    object-fit: cover;
  }

  /* Wenn fixe Höhen benutzt werden, die innere Box auf Höhe strecken */
  .image-with-text__media--small   { min-height: 280px; }
  .image-with-text__media--medium  { min-height: 420px; }
  .image-with-text__media--large   { min-height: 560px; }

  /* Iframe hart an Container binden */
  .image-with-text__media iframe {
    border: 0;
  }

  /* NEU: sorgt dafür, dass Iframes/Videos den adapt-Container sauber füllen */
  .multirow .image-with-text__media {
    position: relative;
  }
  .multirow .image-with-text__media iframe,
  .multirow .image-with-text__media video {
    position: absolute;
    inset: 0;
  }

  .highlight-purple { color: #7c4d9a; }
{%- endstyle -%}


{%- liquid
  if section.settings.image_layout contains 'right'
    assign odd_class = ' image-with-text__grid--reverse'
  else
    assign even_class = ' image-with-text__grid--reverse'
  endif

  if section.settings.row_color_scheme == section.settings.section_color_scheme
    assign no_content_background = true
  endif

  if settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0
    assign no_content_styles = true
  endif

  if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0
    assign borders_class = ' collapse-borders'
  endif

  if no_content_background and no_content_styles
    assign padding_class = ' collapse-padding'
  endif

  unless no_content_background and no_content_styles
    assign corners_class = ' collapse-corners'
  endunless
-%}

<div class="multirow section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="multirow__inner page-width">
    {%- for block in section.blocks -%}
      <div
        class="image-with-text isolate{{ borders_class }}{{ corners_class }}{{ padding_class }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {{ block.shopify_attributes }}
      >
        <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.image_layout contains 'alternate' %}{% cycle odd_class, even_class %}{% else %}{{ odd_class }}{% endif %}">
          
          {%- assign media_type = block.settings.media_type -%}

          {%- assign has_image = false -%}
          {%- if block.settings.image != blank -%}
            {%- assign has_image = true -%}
          {%- endif -%}

          {%- assign has_video = false -%}
          {%- if block.settings.video != blank -%}
            {%- assign has_video = true -%}
          {%- endif -%}

          {%- assign has_ext = false -%}
          {%- if block.settings.external_video_url != blank -%}
            {%- assign has_ext = true -%}
          {%- endif -%}

          <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
            {%- capture media_style -%}
              {%- if section.settings.image_height == 'adapt' -%}
                {%- if media_type == 'image' and has_image and block.settings.image.aspect_ratio -%}
                  padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;
                {%- elsif media_type == 'video' and has_video and block.settings.video.aspect_ratio -%}
                  padding-bottom: {{ 1 | divided_by: block.settings.video.aspect_ratio | times: 100 }}%;
                {%- else -%}
                  /* Fallback 16:9 für externe Videos oder wenn Ratio fehlt */
                  padding-bottom: 56.25%;
                {%- endif -%}
              {%- endif -%}
            {%- endcapture -%}

            <div
              class="image-with-text__media image-with-text__media--{{ section.settings.image_height }} gradient color-{{ section.settings.row_color_scheme }} global-media-settings{% if has_image or has_video or has_ext %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
              {% if section.settings.image_height == 'adapt' %}style="{{ media_style | strip }}"{% endif %}
            >
              {%- case media_type -%}
                {%- when 'video' -%}
                  {%- if has_video -%}
                    {{ block.settings.video
                      | video_tag:
                        autoplay: block.settings.autoplay,
                        loop: block.settings.loop,
                        muted: true,
                        controls: block.settings.show_controls,
                        playsinline: true,
                        preload: 'metadata'
                    }}
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}

                {%- when 'external' -%}
                  {%- if has_ext -%}
                    {%- if block.settings.external_video_url.type == 'youtube' -%}
                      <iframe
                        src="https://www.youtube.com/embed/{{ block.settings.external_video_url.id }}?rel=0&modestbranding=1&playsinline=1{% if block.settings.autoplay %}&autoplay=1&mute=1{% endif %}{% if block.settings.loop %}&loop=1&playlist={{ block.settings.external_video_url.id }}{% endif %}{% if block.settings.show_controls == false %}&controls=0{% endif %}"
                        title="YouTube video"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen
                        loading="lazy"
                      ></iframe>
                    {%- elsif block.settings.external_video_url.type == 'vimeo' -%}
                      <iframe
                        src="https://player.vimeo.com/video/{{ block.settings.external_video_url.id }}?title=0&byline=0&portrait=0{% if block.settings.autoplay %}&autoplay=1&muted=1{% endif %}{% if block.settings.loop %}&loop=1{% endif %}{% if block.settings.show_controls == false %}&controls=0{% endif %}"
                        title="Vimeo video"
                        allow="autoplay; fullscreen; picture-in-picture"
                        allowfullscreen
                        loading="lazy"
                      ></iframe>
                    {%- endif -%}
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}

                {%- else -%}{% comment %} image default {% endcomment %}
                  {%- if has_image -%}
                    {%- capture sizes -%}
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                      (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                    {%- endcapture -%}
                    {{
                      block.settings.image
                      | image_url: width: 1500
                      | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                    }}
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
              {%- endcase -%}
            </div>
          </div>

          <div class="image-with-text__text-item grid__item">
            <div class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.image_height }} content-container{% unless no_content_background and no_content_styles %} gradient color-{{ section.settings.row_color_scheme }}{% else %} background-transparent{% endunless %}">
              {%- if block.settings.caption -%}
                <p class="image-with-text__text image-with-text__text--caption caption-with-letter-spacing caption-with-letter-spacing--medium">
                  {{ block.settings.caption | escape }}
                </p>
              {%- endif -%}
              {%- if block.settings.heading -%}
                {%- assign heading_text = block.settings.heading -%}

                {%- if block.settings.highlight_words != blank -%}
                  {%- assign words = block.settings.highlight_words | split: ',' -%}
                  {%- for w in words -%}
                    {%- assign term = w | strip -%}
                    {%- if term != '' -%}
                      {%- capture rep -%}<span class="highlight-purple">{{ term }}</span>{%- endcapture -%}
                      {%- assign heading_text = heading_text | replace: term, rep -%}
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}

                {%- comment -%}
                  OPTIONAL: feste Wortliste zusätzlich einfärben.
                  Wenn du das nicht brauchst, den gesamten Block unten löschen.
                {%- endcomment -%}
                {%- assign heading_text = heading_text
                  | replace: 'Ihr Unternehmen', '<span class="highlight-purple">Ihr Unternehmen</span>'
                  | replace: 'weckt Marke', '<span class="highlight-purple">weckt Marke</span>'
                  | replace: 'Integration', '<span class="highlight-purple">Integration</span>'
                  | replace: 'Markenerlebnis', '<span class="highlight-purple">Markenerlebnis</span>'
                  | replace: 'Werbung', '<span class="highlight-purple">Werbung</span>'
                  | replace: 'Gastronomie', '<span class="highlight-purple">Gastronomie</span>'
                  | replace: 'Einzelhandel', '<span class="highlight-purple">Einzelhandel</span>'
                  | replace: 'Industrie', '<span class="highlight-purple">Industrie</span>'
                  | replace: 'Büro', '<span class="highlight-purple">Büro</span>'
                  | replace: 'Räume', '<span class="highlight-purple">Räume</span>'
                  | replace: 'Empfang', '<span class="highlight-purple">Empfang</span>'
                  | replace: 'kundenstark', '<span class="highlight-purple">kundenstark</span>'
                  | replace: 'jede Branche', '<span class="highlight-purple">jede Branche</span>'
                  | replace: 'Wahl!', '<span class="highlight-purple">Wahl!</span>'
                  | replace: 'dem CC1', '<span class="highlight-purple">dem CC1</span>'
                  | replace: 'LuckiBot Pro', '<span class="highlight-purple"><br>LuckiBot Pro</span>'
                  | replace: 'Scrubber 75', '<span class="highlight-purple">Scrubber 75</span>'
                -%}

                <h2 class="image-with-text__heading {{ section.settings.heading_size }} rte">
                  {{ heading_text | raw }}
                </h2>
              {%- endif -%}
              {%- if block.settings.text -%}
                <div class="image-with-text__text rte {{ section.settings.text_style }}">{{ block.settings.text }}</div>
              {%- endif -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button button--{{ section.settings.button_style }}"
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
            </div>
          </div>

        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

