        { "value": "alternate-right", "label": "t:sections.multirow.settings.image_layout.options__2.label" },
        { "value": "align-left",      "label": "t:sections.multirow.settings.image_layout.options__3.label" },
        { "value": "align-right",     "label": "t:sections.multirow.settings.image_layout.options__4.label" }
      ],
