  }

  /* Shopify/Dawn Pseudo-Layer auch abrunden, damit kein eckiger Rand bleibt */
  #Slider-{{ section.id }} .banner__buttons .button::before,
  #Slider-{{ section.id }} .banner__buttons .button::after,
  #Slider-{{ section.id }} .slideshow__buttons .button::before,
