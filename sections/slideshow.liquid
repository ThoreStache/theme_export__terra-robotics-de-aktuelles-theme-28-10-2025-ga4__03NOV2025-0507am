{% style %}
/* --- Mobile: Text-Overlay erzwingen, auch wenn banner--mobile-bottom gesetzt ist --- */
@media (max-width: 749px) {
  /* Referenzpunkt f√ºr absolute Kinder */
  #Slider-{{ section.id }} { position: relative; }

  /* Text-Wrapper wieder als Overlay √ºber dem Bild positionieren */
  #Slider-{{ section.id }}.banner--mobile-bottom .slideshow__text-wrapper {
    position: absolute !important;
    left: 0; right: 0;
    bottom: 0; /* Basis: am unteren Rand; Feintuning je Slide via Regler */
    width: 100%;
    z-index: 2;
  }
}
{% endstyle %}

{%- style -%}
/* --- Slide-H√∂hen-Logik getrennt f√ºr Desktop / Mobile --- */

/* Desktop (‚â•750px): unver√§ndert ‚Äì nur wenn Desktop = adapt_image */
@media (min-width: 750px) {
  {% if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank %}
    #Slider-{{ section.id }}::before,
    #Slider-{{ section.id }} .media::before {
      padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
      content: '';
      display: block;
    }
  {% endif %}
}

/* Mobile (‚â§749px): gesteuert √ºber slide_height_mobile */
@media (max-width: 749px) {
  {% liquid
    assign mobile_ratio = nil
    if section.blocks.first.settings.mobile_image != blank
      assign mobile_ratio = section.blocks.first.settings.mobile_image.aspect_ratio
    elsif section.blocks.first.settings.image != blank
      assign mobile_ratio = section.blocks.first.settings.image.aspect_ratio
    endif
  %}

  {% case section.settings.slide_height_mobile %}
    {% when 'inherit' %}
      /* Desktop-Logik √ºbernehmen */
      {% if section.settings.slide_height == 'adapt_image' and mobile_ratio %}
        #Slider-{{ section.id }}::before,
        #Slider-{{ section.id }} .media::before {
          padding-bottom: {{ 1 | divided_by: mobile_ratio | times: 100 }}%;
          content: '';
          display: block;
        }
      {% endif %}

    {% when 'adapt_image' %}
      {% if mobile_ratio %}
        #Slider-{{ section.id }}::before,
        #Slider-{{ section.id }} .media::before {
          padding-bottom: {{ 1 | divided_by: mobile_ratio | times: 100 }}%;
          content: '';
          display: block;
        }
      {% endif %}

    {% when 'sm' %}
      /* Mobile: "Klein" = immer 1:1 Quadrat */
      #Slider-{{ section.id }} { min-height: 0 !important; }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        content: '' !important;
        display: block !important;
        padding-bottom: 100% !important; /* 1:1 */
      }

    {% when 'md' %}
      #Slider-{{ section.id }} { min-height: 55vh !important; }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before { content: none !important; padding-bottom: 0 !important; }

    {% when 'lg' %}
      #Slider-{{ section.id }} { min-height: 70vh !important; }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before { content: none !important; padding-bottom: 0 !important; }
  {% endcase %}
}
{%- endstyle -%}


