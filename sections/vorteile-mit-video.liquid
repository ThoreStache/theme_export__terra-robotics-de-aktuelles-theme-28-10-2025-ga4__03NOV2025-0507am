<div class="custom-benefit-section">
  <div class="benefit-wrapper">
    {% if section.settings.heading != blank %}
      <h2 class="benefit-heading">
        {{
          section.settings.heading
          | replace: 'Terra Robotics', '<span class="highlight-purple">Terra Robotics</span>'
          | replace: 'einen Blick', '<span class="highlight-purple">einen Blick</span>'
          | raw
        }}
      </h2>
    {% endif %}
    <div class="benefit-content">
      <div class="benefit-list">
        {% for block in section.blocks %}
          <div class="benefit-item">
            {% if block.settings.icon != blank %}
              <div class="benefit-icon">
                <img src="{{ block.settings.icon | image_url }}" loading="lazy" alt="{{ block.settings.title }}">
              </div>
            {% endif %}
            <div class="benefit-text">
              {% if block.settings.title != blank %}
                <h3 class="benefit-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="benefit-description">{{ block.settings.text }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="benefit-media">
        {% if section.settings.video_url != blank %}
          <video autoplay muted loop playsinline>
            <source src="{{ section.settings.video_url }}" type="video/mp4">
          </video>
        {% elsif section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url }}" loading="lazy" alt="Vorteilsbild">
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .custom-benefit-section {
    background: #0d1521;
    padding: 1rem 0 7rem 0;
    color: #ffffff;
  }

  .benefit-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .benefit-heading {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 4rem;
    color: #ffffff;
  }

  .benefit-heading .highlight-purple {
    color: #7c4d9a;
  }

  .benefit-content {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    align-items: flex-start;
  }

  .benefit-list {
    flex: 1 1 50%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .benefit-item {
    background: #1c2634;
    border-radius: 14px;
    padding: 1.25rem 1.75rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    min-height: 110px;
  }

  .benefit-icon img {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .benefit-title {
    margin: 0 0 0.35rem;
    font-size: 18px;
    font-weight: 600;
    font-family: 'Montserrat', sans-serif;
    color: #ffffff;
  }

  .benefit-description {
    margin: 0;
    font-size: 16px;
    font-family: 'Poppins', sans-serif;
    color: #cccccc;
  }

  .benefit-media {
    flex: 1 1 45%;
    border-radius: 14px;
    overflow: hidden;
  }

  .benefit-media img,
  .benefit-media video {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 14px;
  }

  @media (max-width: 980px) {
    .benefit-content {
      flex-direction: column;
    }

    .benefit-list,
    .benefit-media {
      flex: 1 1 100%;
    }
  }

  @media (min-width: 981px) {
  .benefit-heading {
    font-size: 40px;
    color: #ffffff;
  }
}
  @media (max-width: 980px) {
  /* Abschnittsüberschrift */
  .benefit-heading {
    font-size: 30px;
  }

  /* Überschrift in den Vorteilsboxen */
  .benefit-title {
    font-size: 17px;
  }

  /* Beschreibung in den Vorteilsboxen */
  .benefit-description {
    font-size: 15px;
  }
}
</style>

{% schema %}
{
  "name": "Vorteilsabschnitt",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Abschnittsüberschrift",
      "default": "6 Gute Gründe für Terra Robotics"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video-URL (optional)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Alternativbild, wenn kein Video"
    }
  ],
  "blocks": [
    {
      "type": "vorteil",
      "name": "Vorteilsbox",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Überschrift"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Beschreibung"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vorteilsabschnitt"
    }
  ]
}
{% endschema %}
