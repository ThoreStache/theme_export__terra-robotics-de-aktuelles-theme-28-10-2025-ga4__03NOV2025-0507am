<style>
  /* âœ… AbschnittsÃ¼berschrift: angepasst auf Montserrat, responsive */
  .green-boxes-title {
    font-family: 'Montserrat', sans-serif;
    font-weight: bold;
    color: #121212;
    text-align: center;
    margin-bottom: 4rem;
    line-height: 1.2;
  }

  /* Desktop: ab 1200px â†’ 40px */
  @media (min-width: 1200px) {
    .green-boxes-title {
      font-size: 40px;
    }
  }

  /* Tablet: 750pxâ€“1199px â†’ 40px */
  @media (min-width: 750px) and (max-width: 1199px) {
    .green-boxes-title {
      font-size: 40px;
    }
  }

  .green-box:hover {
  box-shadow: 0 0 0 2px #7c4d9a;
  transform: translateY(-2px);
  transition: all 0.2s ease;
  cursor: pointer;
}
  
  /* Mobile: bis 749px â†’ 30px */
  @media (max-width: 749px) {
    .green-boxes-title {
      font-size: 30px;
    }
  }

  /* ðŸŸ¢ Gleiche Breite und Padding wie alle anderen Shopify-Abschnitte */
  .green-boxes-section .page-width {
    max-width: var(--page-width);
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media (min-width: 750px) {
    .green-boxes-section .page-width {
      padding-left: 5rem;
      padding-right: 5rem;
    }
  }

  /* âœ… GroÃŸe Screens ab 1200px â†’ 4 Spalten */
  @media (min-width: 1200px) {
    .green-boxes-section .grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
    }
  }

  .green-box {
    background-color: #f0fece;
    border-radius: 20px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 0 0 1px #e5e5e5;
    width: 100%;
    max-width: 100%;
  }

  .green-box img {
    width: 64px;
    height: 64px;
    margin-bottom: 12px;
  }

  .green-box h3 {
    font-weight: bold;
    color: #121212;
    margin: 0;
    font-size: 18px;
  }

  /* âœ… Tablet & Small Desktop: 750pxâ€“1199px â†’ 2 Spalten */
  @media (max-width: 1199px) and (min-width: 750px) {
    .green-box h3 {
      font-size: 17px;
    }

    .green-boxes-section .grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      justify-content: center;
    }
  }

  /* âœ… Mobile: bis 749px â†’ 2 Spalten */
  @media (max-width: 749px) {
    .green-box h3 {
      font-size: 16px;
    }

    .green-boxes-section .grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
      justify-content: center;
    }
  }
</style>


<div class="green-boxes-section section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="green-boxes-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="grid">
      {% for block in section.blocks %}
         <a href="{{ block.settings.link | default: '/' }}" class="green-box" style="display: block; text-decoration: none;">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 128 }}" alt="">
          {% endif %}
          <h3>{{ block.settings.heading }}</h3>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

